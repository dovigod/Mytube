extends layouts/main


block content
    .form-container
        form(action=routes.editVideo(video.id) , method = "post")

            input(type ="text" , name= "title", placeholder= "Title" , value = video.title)

            textarea(type ="text", name="description" , placeholder = "Description")= video.description

            input(type="submit", value ="Edit Video")
    a.delete-video( href=routes.deleteVideo(video.id) ) Delete Video
        